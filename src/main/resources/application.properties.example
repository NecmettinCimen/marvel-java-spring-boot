spring.application.name=marvel

spring.r2dbc.url=r2dbc:postgresql://localhost:5432/marvel-java
spring.r2dbc.username=username
spring.r2dbc.password=password

spring.flyway.enabled=false
spring.datasource.initialization-mode=never

spring.sql.init.mode=always
spring.r2dbc.generate-unique-name=false
spring.jpa.hibernate.ddl-auto=create

jwt.secret=yoursecret
jwt.expiration=86400000


cors.allowed-origins=http://localhost:8080,http://localhost:5173,https://marvel-java-app.necmettincimen.xyz,https://nec-ocelot-gateway.necmettincimen.xyz
cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
cors.allowed-headers=*
cors.allow-credentials=true